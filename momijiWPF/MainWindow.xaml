<Window x:Class="momijiWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:momijiWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="169" Width="324" Closing="Window_Closing">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Button Content="Run" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="55" Width="135" Click="Button_Click_Run" Grid.RowSpan="2"/>
        <Button Content="Open" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Height="55" Width="135" Click="Button_Click_Open" Grid.Row="1" Grid.RowSpan="2"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="175,45,0,0" VerticalAlignment="Top" Height="55" Width="135" Click="Button_Click_Close" Grid.Row="1" Grid.RowSpan="2"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="175,10,0,0" VerticalAlignment="Top" Height="55" Width="135" Click="Button_Click_Stop" Grid.RowSpan="2"/>

    </Grid>
</Window>
